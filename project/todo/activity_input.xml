<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" >

    <TextView
        android:id="@+id/make_grp_timer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/make_timers_msg" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:focusable="true"
        android:onClick="register"/>

    <Button
        android:id="@+id/idou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="tolist1"
        android:text="一覧画面へ" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="内容" />

    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:onClick="task_on"
        android:maxLength="20"


        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="締め切り" />

    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:onClick="edit_text2_onClick"
        android:singleLine="true"
        android:focusable="false"/>
    <ImageButton
        android:id="@+id/buttonHelp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFC107"
        android:onClick="onTapEvent"
        android:src="@android:drawable/ic_menu_help"
        app:layout_constraintBottom_toTopOf="@+id/textNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/pieChart"
        app:layout_constraintVertical_bias="0.054" />


</LinearLayout>