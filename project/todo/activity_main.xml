<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    //画面遷移

    <TextView
        android:id="@+id/textView"
        android:layout_width="403dp"
        android:layout_height="75dp"
        android:text="ToDoリスト"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/roundebutton"
        android:onClick="sakusei_onClick"
        android:text="作成"
        app:layout_constraintBottom_toTopOf="@+id/buttonTodo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/modoru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/roundebutton"
        android:onClick="modoru_onClick"
        android:text="戻る"
        app:layout_constraintBottom_toTopOf="@+id/buttonMain"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/buttonCalender"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="カレンダー"
        android:textSize="10sp"
        app:backgroundTint="#CA7AD8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <Button
        android:id="@+id/buttonTodo"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="Todo"
        android:textSize="10sp"
        app:backgroundTint="#CA7AD8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <Button
        android:id="@+id/buttonKeisoku"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="計測"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:backgroundTint="#CA7AD8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <Button
        android:id="@+id/buttonKiroku"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:text="学習　記録"
        android:textSize="10sp"
        app:backgroundTint="#CA7AD8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <Button
        android:id="@+id/buttonMain"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:lineSpacingExtra="24sp"
        android:text="メイン"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:textStyle="bold"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <ListView

        android:id="@+id/list"
        android:layout_width="407dp"
        android:layout_height="384dp"
        android:layout_marginTop="12dp"
        android:choiceMode="multipleChoice"
        app:layout_constraintBottom_toTopOf="@+id/buttonKiroku"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.117"
        tools:layout_editor_absoluteX="-1dp" />


    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:onClick="btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
