<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/make_grp_timer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/make_timers_msg" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:focusable="true"
        android:onClick="hozon_on"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="キャンセル" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容" />

    <EditText
        android:id="@+id/timers_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:onClick="task_on"


        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="締め切り" />

    <EditText
        android:id="@+id/timers_name_edit_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:onClick="timers_name_edit_text2_onClick"
        android:singleLine="true"
        android:focusable="false"/>

</LinearLayout>